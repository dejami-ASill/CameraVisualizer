<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@android:color/black"
    android:id="@+id/options_root_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <FrameLayout
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/effect_container">

        <TextView
            android:id="@+id/effect_rect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crazy_rect"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center_vertical|left"/>

        <TextView
            android:id="@+id/effect_triangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crazy_triangle"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:layout_gravity="center_vertical|right"/>


        <TextView
            android:id="@+id/effect_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/camera_effect_normal"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:layout_gravity="center"/>

    </FrameLayout>


</LinearLayout>